<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/montext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="90dp"
        android:padding="8dp"
        android:text="MENU PRINCIPAL"
        android:textSize="20dp">

    </TextView>

    <Button
        android:id="@+id/btnFraisauforfait"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="clickMenu"
        android:text="Frais au forfait">

    </Button>

    <Button
        android:id="@+id/btnFraishorsforfait"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="clickMenu"
        android:text="Frais hors forfait">

    </Button>

    <Button
        android:id="@+id/btnSynthesedumois"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="clickMenu"
        android:text="Synthese du mois">

    </Button>

    <Button
        android:id="@+id/btnParametre"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:onClick="clickMenu"
        android:text="Parametre">

    </Button>
        <Button
            android:id="@+id/btnHistoriquedesenvois"
            android:layout_width="407dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="clickMenu"
            android:text="Historique des envois">

        </Button>
        <Button
            android:id="@+id/btnAuthentification"
            android:layout_width="407dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="clickMenu"
            android:text="Authentification">

        </Button>

    </LinearLayout>

</ScrollView>
